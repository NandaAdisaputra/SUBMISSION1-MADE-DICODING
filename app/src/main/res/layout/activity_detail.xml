<?xml version="1.0" encoding="utf-8"?><!--TODO 7. Atur layout activity_detail-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background4">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background3"
        tools:context=".activity.DetailActivity"
        tools:ignore="RedundantNamespace,ScrollViewSize">

        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/poster_a_star"
            tools:ignore="ContentDescription"

            />

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gambar"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="@string/judul_movie"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="ObsoleteLayoutParam,RtlCompat"

            />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gambar"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="4dp"
            android:minHeight="280dp"
            android:text="@string/deskripsi"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            tools:ignore="ObsoleteLayoutParam,RtlCompat"

            />

        <TextView
            android:id="@+id/tv_tanggalrilis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gambar"
            android:layout_centerInParent="true"
            android:layout_marginTop="200dp"
            android:background="#0028FF"
            android:text="@string/tanggal_rilis"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="ObsoleteLayoutParam,RtlCompat"

            />

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tanggalrilis"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="@string/genre"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="ObsoleteLayoutParam,RtlCompat"

            />


    </RelativeLayout>
</ScrollView>